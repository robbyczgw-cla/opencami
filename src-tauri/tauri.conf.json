{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "OpenCami",
  "version": "1.4.0",
  "identifier": "com.opencami.desktop",
  "build": {
    "frontendDist": "../dist/client",
    "devUrl": "http://localhost:3003"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "OpenCami",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
